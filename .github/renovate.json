{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommitTypeAll(chore)"
  ],
  "semanticCommits": "enabled",
  "git-submodules": {
    "enabled": false
  },
  "gradle": {
    "managerFilePatterns": [
      "/(^|/)build.gradle.kts$/",
      "/(^|/)settings.gradle.kts$/"
    ]
  },
  "gomod": {
    "managerFilePatterns": [
      "/libcore/go.mod$/"
    ]
  },
  "github-actions": {
    "managerFilePatterns": [
      "/.github/workflows/.*.yml$/"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "semanticCommitType": "ci"
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchPackageNames": [
        "github.com/sagernet/sing-box",
        "github.com/sagernet/gomobile"
      ],
      "enabled": true
    }
  ]
}