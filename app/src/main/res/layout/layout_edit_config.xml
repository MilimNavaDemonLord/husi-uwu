<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/layout_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerColor="?attr/colorOutlineVariant" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layoutDirection="ltr">

            <com.blacksquircle.ui.editorkit.widget.TextProcessor
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:completionThreshold="2"
                android:importantForAutofill="no"
                android:scrollbars="vertical|horizontal" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/keyboard_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/action_tab"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="7dp"
                android:src="@drawable/baseline_keyboard_tab_24"
                app:tint="?attr/colorOnSurface" />

            <io.nekohasekai.sagernet.widget.ExtendedKeyboard
                android:id="@+id/extended_keyboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="0dp"
                app:layoutManager="io.nekohasekai.sagernet.widget.NoScrollLinearLayout"
                tools:itemCount="6"
                tools:listitem="@layout/item_keyboard_key" />

            <ImageView
                android:id="@+id/action_undo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="4dp"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="7dp"
                android:src="@drawable/baseline_undo_24"
                app:tint="?attr/colorOnSurface" />

            <ImageView
                android:id="@+id/action_redo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="4dp"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="7dp"
                android:src="@drawable/baseline_redo_24"
                app:tint="?attr/colorOnSurface" />

            <ImageView
                android:id="@+id/action_format"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="4dp"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_format_align_left_24"
                app:tint="?attr/colorOnSurface" />

            <ImageView
                android:id="@+id/action_config_test"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_info_24"
                app:tint="?attr/colorOnSurface" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>