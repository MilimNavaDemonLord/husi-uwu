<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditTextPreference
        app:icon="@drawable/ic_social_emoji_symbols"
        app:key="profileName"
        app:layout="@layout/uwu_preference_card_top"
        app:title="@string/profile_name"
        app:useSimpleSummaryProvider="true" />
    <rikka.preference.SimpleMenuPreference
        app:defaultValue="2"
        app:entries="@array/hysteria_version"
        app:entryValues="@array/hysteria_version"
        app:icon="@drawable/ic_baseline_update_24"
        app:key="protocolVersion"
        app:layout="@layout/uwu_preference_card_bottom"
        app:title="@string/protocol_version"
        app:useSimpleSummaryProvider="true" />
    <PreferenceCategory
        app:title="@string/proxy_cat">
        <EditTextPreference
            app:icon="@drawable/ic_hardware_router"
            app:key="serverAddress"
            app:layout="@layout/uwu_preference_card_top"
            app:title="@string/server_address"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_maps_directions_boat"
            app:key="serverPorts"
            app:layout="@layout/uwu_preference_card_middle"
            app:title="@string/server_port"
            app:useSimpleSummaryProvider="true" />
        <io.nekohasekai.sagernet.widget.DurationPreference
            app:icon="@drawable/ic_baseline_timelapse_24"
            app:key="hopInterval"
            app:layout="@layout/uwu_preference_card_middle"
            app:title="@string/hop_interval"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:dialogLayout="@layout/layout_password_dialog"
            app:icon="@drawable/ic_baseline_texture_24"
            app:key="serverObfs"
            app:layout="@layout/uwu_preference_card_middle"
            app:title="@string/hysteria_obfs"
            app:useSimpleSummaryProvider="true" />
        <rikka.preference.SimpleMenuPreference
            app:entries="@array/hysteria_auth_type"
            app:entryValues="@array/int_array_3"
            app:icon="@drawable/ic_baseline_compare_arrows_24"
            app:key="serverAuthType"
            app:layout="@layout/uwu_preference_card_middle"
            app:title="@string/hysteria_auth_type"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:dialogLayout="@layout/layout_password_dialog"
            app:icon="@drawable/ic_settings_password"
            app:key="serverPassword"
            app:layout="@layout/uwu_preference_card_middle"
            app:title="@string/hysteria_auth_payload" />
        <rikka.preference.SimpleMenuPreference
            app:defaultValue="https"
            app:entries="@array/hysteria_protocol"
            app:entryValues="@array/int_array_3"
            app:icon="@drawable/ic_baseline_layers_24"
            app:key="serverProtocol"
            app:layout="@layout/uwu_preference_card_middle"
            app:title="@string/protocol"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_action_copyright"
            app:key="serverSNI"
            app:layout="@layout/uwu_preference_card_middle"
            app:title="@string/sni"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_legend_toggle_24"
            app:key="serverALPN"
            app:layout="@layout/uwu_preference_card_middle"
            app:title="@string/alpn"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_vpn_key_24"
            app:key="serverCertificates"
            app:layout="@layout/uwu_preference_card_middle"
            app:title="@string/certificates"
            app:useSimpleSummaryProvider="true" />
        <io.nekohasekai.sagernet.widget.MaterialSwitchPreference
            app:icon="@drawable/ic_notification_enhanced_encryption"
            app:key="serverAllowInsecure"
            app:layout="@layout/uwu_preference_card_middle_switch"
            app:summary="@string/allow_insecure_sum"
            app:title="@string/allow_insecure" />
        <io.nekohasekai.sagernet.widget.MaterialSwitchPreference
            android:summaryOn="@string/on"
            android:summaryOff="@string/off"
            app:icon="@drawable/ic_baseline_transgender_24"
            app:key="serverDisableSNI"
            app:layout="@layout/uwu_preference_card_middle_switch"
            app:title="@string/tuic_disable_sni" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_texture_24"
            app:key="serverStreamReceiveWindow"
            app:layout="@layout/uwu_preference_card_middle"
            app:title="@string/hysteria_stream_receive_window"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_transform_24"
            app:key="serverConnectionReceiveWindow"
            app:layout="@layout/uwu_preference_card_middle"
            app:title="@string/hysteria_connection_receive_window"
            app:useSimpleSummaryProvider="true" />
        <io.nekohasekai.sagernet.widget.MaterialSwitchPreference
            app:icon="@drawable/ic_baseline_multiple_stop_24"
            app:key="serverDisableMtuDiscovery"
            app:layout="@layout/uwu_preference_card_bottom_switch"
            app:title="@string/hysteria_disable_mtu_discovery" />
    </PreferenceCategory>
    <PreferenceCategory
        app:key="serverEchCategory"
        app:title="@string/ech">
        <io.nekohasekai.sagernet.widget.MaterialSwitchPreference
            android:summaryOn="@string/on"
            android:summaryOff="@string/off"
            app:icon="@drawable/ic_baseline_security_24"
            app:key="serverECH"
            app:layout="@layout/uwu_preference_card_top_switch"
            app:title="@string/enable" />
        <EditTextPreference
            app:icon="@drawable/ic_baseline_nfc_24"
            app:key="serverECHConfig"
            app:layout="@layout/uwu_preference_card_bottom"
            app:title="@string/ech_config"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>
